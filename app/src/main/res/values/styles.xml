<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ThemeGreen" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimaryGreen</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkGreen</item>
        <item name="colorButtonNormal">@color/colorButtonNormalGreen</item>
        <item name="android:textColor">#00831C</item>
        <item name="colorAccent">@color/colorAccentGreen</item>
        <item name="android:windowBackground">@color/colorAccentGreen</item>
    </style>

    <style name="ThemeBlue" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimaryBlue</item>
        <item name="colorPrimaryDark">#081540</item>
        <item name="colorButtonNormal">@color/colorButtonNormalBlue</item>
        <item name="android:textColor">@color/colorTextBlue</item>
        <item name="colorAccent">@color/colorAccentBlue</item>
        <item name="android:windowBackground">@color/colorAccentBlue</item>
    </style>

    <style name="ThemeBlack" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimaryBlack</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkBlack</item>
        <item name="colorButtonNormal">@color/colorButtonNormalBlack</item>
        <item name="android:textColor">@color/colorTextBlack</item>
        <item name="colorAccent">@color/colorAccentBlack</item>
        <item name="android:windowBackground">@color/colorWindowBackgroundBlack</item>
    </style>


</resources>
